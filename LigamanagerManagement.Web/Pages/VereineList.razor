@page "/vereine"
@using LigaManagerManagement.Web.Pages;
@inherits VereineListBase

@attribute [Authorize]

<style type="text/css">

    .TableElement {
        border: 0px solid #fff;
        background-color: transparent;
    }

    .table td, .table th {
        padding: 0.05rem !important;
        vertical-align: top;
        border-top: 0px solid #dee2e6;
    }

    h4 {
        display: flex;
        flex-direction: row;
        width: 94%;
        height: 0.5px;
    }

        h4:after {
            content: "";
            flex: 1 1;
            border-bottom: 1px solid #000;
            padding: 0px;
            margin: -5.5px;
        }

    table {
        border-collapse: collapse;
    }

        table.sectioned tbody {
            border: 1px solid darkgray;
            border-collapse: separate;
            border-spacing: 4px;
            box-shadow: 3px 3px grey;
        }
</style>

@if (VereineList == null)
{
    <div class="spinner"></div>
}
else
{

    <div class="row mt-4">
        <div class="col-6">
            <h2 >Vereine</h2>
        </div>
        <div class="col-4 offset-2">
            <a href="createverein" style="width:180px;" class="btn btn-primary form-control">Neuer Verein</a>
        </div>
        <div class="col-12 p-3">
            @if (VereineList.Any())
            {
                @foreach (var verein in VereineList)
                {
                    <EditForm Model="@Vereine">
                        <table class="table table-bordered">
                            @if (verein.VereinNr == 1)
                            {
                                <thead class="bg-blue">
                                    <tr>
                                        <th class="priority-1" style="height:40px;max-width:20%;" scope="col">Verein Nr</th>
                                        <th class="priority-1" style="height:40px;max-width:80%;" scope="col">Verein</th>
                                    </tr>
                                </thead>
                            }                            
                            <tbody style="border-width:1px;">
                                <tr>
                                    <td><InputNumber readonly id="txtVerein1" class="TableElement priority-1" style="max-height:38px; max-width:20%;pointer-events:none;" tabindex="1" @bind-Value=verein.VereinNr /></td>
                                    <td><InputText readonly id="txtVerein2" class="TableElement priority-1" style="max-height:38px; max-width:80%;pointer-events:none;" tabindex="2" @bind-Value=verein.Vereinsname1 /></td>
                                    <td> <NavLink href="@($"editverein/{verein.Id}")" class="btn-primary btn">Bearbeiten</NavLink></td>
                                    <LigamanagerManagement.Web.Pages.Shared._EditDelete>
                                    </LigamanagerManagement.Web.Pages.Shared._EditDelete>                                
                                </tr>
                            </tbody>
                        </table>
                    </EditForm>
                }
            }
            else
            {             
                <p>keine Datensätze gefunden.</p>
            }
        </div>
    </div>

    <button onclick="javascript:scrollToTop()" class="btn btn-primary">Nach Oben</button>

    <br />

    <script src="https://code.jquery.com/jquery-3.3.1.min.js">
    </script>
    <script>
        function scrollToTop() {
            $(window).scrollTop(0);
        }
    </script>


    @* <NavLink class="nav-link" href="/editverein" Match="NavLinkMatch.All">
        <span class="oi oi-file" aria-hidden="true"></span>
        Neu
    </NavLink>
    <NavLink class="nav-link" href="/editverein/1" Match="NavLinkMatch.All">
        <span class="oi oi-pencil" aria-hidden="true"></span>
        Bearbeiten
    </NavLink> *@

}